---
import Logo from "../assets/logo.svg";
import RootLayout from "./RootLayout.astro";
import CartLink from "../components/cart-link";
import SearchInput from "../components/search-input";

const pathname = Astro.url.pathname

const { title, description } = Astro.props;
---

<RootLayout title={title} description={description}>
    <section class="w-full min-h-screen bg-gradient-to-br from-[#e4e7e4]/20 to-[#727a9a]/30">
        <div class="mx-auto w-full max-w-screen-lg">
            <div class="p-4 flex items-center justify-between gap-4">
                <div class="flex items-center justify-center gap-4">
                    <a href="/">
                        <Logo width={32} height={32} fill="currentColor" />
                    </a>
                    <a href="/products" data-active={pathname === '/products'} class="hidden sm:block text-sm text-gray-600  hover:text-orange-600 data-[active=true]:text-orange-600">
                        Products
                    </a>
                    <a href="/blog" data-active={pathname === '/blog'} class="hidden sm:block text-sm text-gray-600  hover:text-orange-600 data-[active=true]:text-orange-600">
                        Blog
                    </a>
                    <a href="/about" data-active={pathname === '/about'} class="hidden sm:block text-sm text-gray-600  hover:text-orange-600 data-[active=true]:text-orange-600">
                        About
                    </a>
                </div>

                <SearchInput client:load />

                <div class="flex items-center justify-center gap-4">
                    <a href="#" data-active={pathname === '#'} class="hidden sm:block text-sm text-gray-600  hover:text-orange-600 data-[active=true]:text-orange-600">
                        Need help shopping?
                    </a>
                    <CartLink pathname={pathname} client:load />
                    
                </div>
            </div>

            <slot />
        </div>
    </section>
</RootLayout>